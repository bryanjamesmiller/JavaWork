/** Age.java
 *  This program asks a user for their age and then 
 *  uses a message box to respond jokingly if their age 
 *  is under or over 40.
 *
 *  @author:     Dr. Henry H. Leitner
 *  @version:    Last Modified, January 13, 2013
 */
import javax.swing.*;

public class Age {

	public static void main(String [] args){
		String ageString = JOptionPane.showInputDialog (null, "What's your age, cowboy?");
		int age= Integer.parseInt(ageString);
		if(age<40)
			JOptionPane.showMessageDialog (null, "You're young.");
		else
			JOptionPane.showMessageDialog (null, "You're old for a cow'boy'.");
	}
}
